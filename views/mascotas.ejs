<%- include('template/header', {tituloWeb: "Página de Servicios"}); %>

<div class="container">
  <h1>CRUD con MongoDB</h1>
  <a href="mascotas/crear" class="btn btn-success">Agregar Mascota</a>

    <% if (arrayMascotas.length > 0) { %>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripción</th>
                <th scope="col">Acción</th>
              </tr>
            </thead>
            <tbody>
                <% arrayMascotas.forEach(mascota => { %>
                    <tr>
                        <th scope="row"><%= mascota.id %> </th>
                        <td><%= mascota.nombre %></td>
                        <td><%= mascota.descripcion %></td>
                        <td>
                          <a href="mascotas/<%= mascota.id %>" class="btn btn-warning btn-sm">Editar</a>
                        </td>
                      </tr>
                 
                <% }) %>
              
            </tbody>
          </table>
    <% } %>

</div>
    
<%- include('template/footer'); %>